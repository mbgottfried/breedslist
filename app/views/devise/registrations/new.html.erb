<%= render 'layouts/header' %>
<div class="container">
	<div class="page-header center">
		<h1>Breeder Sign Up</h1>
		<h4>Breedslist is the place to list and sell puppies.</h4>
	</div>
	<div class="col-md-8 col-md-offset-2">
		<div class="panel panel-default">


		  <div class="panel-heading center">
		  	<h5>First, let's set up your account details</h5>
		  </div>
		  <div class="panel-body">
		    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		      <%= devise_error_messages! %>

		      <div class="form-group">
		        <%= f.label "Full Name" %>
		        <%= f.email_field :name, autofocus: true, placeholder: "John Doe", class: "form-control" %>
		      </div>

		      <div class="form-group">
		        <%= f.label "Email Address" %>
		        <%= f.email_field :email, autofocus: true, placeholder: "name@example.com", class: "form-control" %>
		      </div>

		      <div class="form-group">
		        <%= f.label :password %>
		        <%= f.password_field :password, class: "form-control" %>
		      </div>

		      <div class="form-group">
		      	<%= f.label "Confirm Password" %>
		      	<%= f.password_field :password_confirmation, :class => "field", class: "form-control" %>
		      </div>

		      <div class="form-group">
		        <%= f.submit "Create Account and Continue", class: "btn btn-signup" %>
		        <p>Next, you'll create your Breeder Page.</p>
		      </div>
		    <% end %>
		  </div>

		  <div class="panel-footer">
		    <%= render "devise/shared/links" %>
		  </div>
		</div>
	</div>
</div>

<%= render 'layouts/footer' %>